<%%= form_for(@<%= singular_table_name %>, html: { class: 'form-horizontal' }) do |f| %>
  <%%#= render 'layouts/error_messages', model_name: @<%= singular_table_name %> %>
  <%%= render 'layouts/message_required' %>
<% attributes.each do |attribute| -%>
  <div class="form-group">
    <div class="col-sm-10 col-offset-1">
      <%%= f.label :<%= attribute.name %> %>
      <%%= f.<%= attribute.field_type %> :<%= attribute.name %>, class: 'form-control' %>
    </div>
  </div>
<% end -%>
  <div class="form-group">
    <div class="col-sm-10">
      <%%= f.submit nil, class: 'btn btn-primary', data: { disable_with: disable_with } %>
      <%%= link_to I18n.t('helpers.links.cancel'), <%= plural_table_name %>_path, class: 'btn btn-warning' %>
    </div>
  </div>
<%% end %>
